module gerador_onda_triangular #(
  parameter WIDTH = 1 // número de bits para o sinal de saída
) (
  input clk, // sinal de clock
  input reset, // sinal de reset
  output reg [WIDTH-1:0] out // sinal de saída
);

reg [WIDTH-1:0] count; // contador de níveis da onda triangular
reg [WIDTH-1:0] increment; // incremento do contador

always @(posedge clk or posedge reset) begin
  if (reset) begin
    count <= 0;
    out <= 0;
    increment <= 1;
  end else begin
    count <= count + increment;
    if (count == {(WIDTH-1){1'b1}, 1'b0}) begin // limitar o contador ao máximo de WIDTH bits
      increment <= ~increment; // inverter o incremento para começar a descer
    end
    if (count == 0) begin
      increment <= ~increment; // inverter o incremento para começar a subir
    end
    out <= count;
  end
end

endmodule

